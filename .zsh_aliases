function mux() {
    if [[ -n '$@' ]]; then
        tmux $@
        return
    fi

    tmux attach 2>/dev/null
    if [[ $? -eq 0 ]]; then
        return
    fi
    if [[ -z '$TMUX' ]]; then
        tmux
    else
        echo "You're already in tmux!"
    fi
}

